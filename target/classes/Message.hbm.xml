<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping> 
	<class name="entities.MessageEntity" table = "messages"> 
		<id name = "id" column="id"> 
			<generator class="native"/>
		</id> 
		
		<property name="idFrom" column="id_from" type = "int"/> 
		<property name="idTo" column="id_to" type = "int"/> 
		<property name="messageString" column="message_string" type = "string"/> 
	</class> 
</hibernate-mapping>